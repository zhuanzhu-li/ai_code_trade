# 使用 npm 官方源
registry=https://registry.npmjs.org/

# 安装时包含可选依赖
optional=true

# 安装时显示详细信息
loglevel=info

# 保存精确版本
save-exact=false

# 安装时自动修复漏洞
audit-level=moderate

# 强制使用最新版本解决依赖冲突
legacy-peer-deps=false

# 自动安装对等依赖
auto-install-peers=true

# 使用扁平化安装
shamefully-hoist=false

# 强制安装可选依赖
include=optional
